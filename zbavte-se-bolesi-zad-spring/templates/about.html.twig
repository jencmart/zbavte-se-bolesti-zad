{% extends 'layout.html.twig' %}
{%  set menu_name = 'info' %}

{% set page_name = 'O mně' %}
{% block title %} {{ page_name }} {% endblock %}


{% block structuredData %}
    <script type="application/ld+json">
        {
            "@context": "https://schema.org",
            "@type": "BreadcrumbList",
            "itemListElement": [{
                "@type": "ListItem",
                "position": 1,
                "name": "Úvod",
                "item": "https://www.zbavtesebolestizad.cz"
            },{
                "@type": "ListItem",
                "position": 2,
                "name": "O mně",
                "item": "https://www.zbavtesebolestizad.cz/o-mne"
            }]
        }
